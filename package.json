{
  "name": "graphql-jsonplaceholder",
  "description": "A GraphQL implementation of the JSONPlaceholder API",
  "private": true,
  "keywords": [
    "typescript"
  ],
  "author": "Tobi Fuhrimann",
  "license": "MIT",
  "scripts": {
    "start": "node dist",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "build": "rimraf dist && tsc",
    "build:docker": "docker build -t graphql-jsonplaceholder .",
    "lint": "tslint --fix 'src/**/*.ts'",
    "test": "npm run lint"
  },
  "dependencies": {
    "dataloader": "^1.4.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "graphql": "^14.1.1",
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/express-graphql": "^0.6.2",
    "@types/graphql": "^14.0.5",
    "@types/node": "^10.12.18",
    "@types/node-fetch": "^2.1.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.0",
    "rimraf": "^2.6.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "tslint --project tsconfig.json --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mastertinner/nodejs-typescript-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/mastertinner/nodejs-typescript-boilerplate/issues"
  },
  "engines": {
    "node": ">=11"
  }
}
